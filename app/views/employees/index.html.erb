
<h1>Listing Employees</h1>
<%= link_to 'new employee' ,'/employees/new' %>
<br>
<br>
<br>
<table>
<thead>
<tr>
<th>NAME</th>
<th>Phone</th>
 <th>Email</th>
 <th colspan="3" >Action</th>
</tr>
</thead>
<tbody>
<% @employ.each do |emp|%>
<tr>
<td><%=emp.name %></td>

<td><%=emp.phone %></td>

<td><%= emp.email  %></td>
<td> <%= link_to 'view', emp%> </td>
<td> <%= link_to 'edit', edit_employee_path(emp)%> </td>
<td> <%= button_to 'Delete', emp, method: :delete ,data: {confirm: 'are you sure'}%> </td>



</tr> 
<% end  %>

</tbody>

</table>